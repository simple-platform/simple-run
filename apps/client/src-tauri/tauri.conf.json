{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "mix phx.server",
    "devPath": "http://localhost:3156",
    "distDir": "http://localhost:3156"
  },
  "package": {
    "productName": "Simple Run",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "scope": [
          {
            "args": [
              "--client",
              {
                "validator": "\\S+"
              }
            ],
            "name": "../burrito_out/desktop",
            "sidecar": true
          }
        ],
        "sidecar": true
      },
      "window": {
        "all": false,
        "startDragging": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "../burrito_out/desktop"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.simple.run",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Run containerized applications easily on your local machine.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Simple Run",
        "titleBarStyle": "Overlay",
        "resizable": true,
        "hiddenTitle": true,
        "fullscreen": false,
        "width": 1280,
        "height": 768,
        "minWidth": 1280,
        "minHeight": 768
      }
    ]
  }
}